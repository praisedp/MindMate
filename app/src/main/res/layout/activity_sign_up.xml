<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="498dp"
        android:layout_height="768dp"
        android:layout_marginStart="-44dp"
        android:layout_marginTop="-183dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/login" />

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:fontFamily="sans-serif-medium"
        android:text="Create Your Account"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="374dp"
        android:layout_height="63dp"
        android:layout_marginTop="268dp"
        android:background="@drawable/input_background"
        android:hint="Enter your name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingStart="16dp"/>

    <!-- Password Input -->
    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="374dp"
        android:layout_height="63dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/input_background"
        android:hint="Email"
        android:paddingStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nameEditText" />

    <!-- Privacy Policy Checkbox -->

    <!-- Email Sign Up Button -->

    <!-- Sign Up with Apple Button -->
    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="374dp"
        android:layout_height="63dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/input_background"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emailEditText" />

    <!-- Apple Logo for Sign Up Button -->
    <CheckBox
        android:id="@+id/privacyPolicyCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="I agree to the Privacy Policy"
        android:textColor="#A1A4B2"
        android:textSize="14sp"
        android:buttonTintMode="src_atop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/passwordEditText" />

    <Button
        android:id="@+id/signUpButton"
        android:layout_width="345dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/continue_button_selector"
        android:backgroundTint="@null"
        android:text="Sign Up"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/privacyPolicyCheckBox" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/appleSignUpButton"
        android:layout_width="248dp"
        android:layout_height="50dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/apple_button_background"
        android:backgroundTint="@null"
        android:paddingStart="48dp"
        android:text="Sign up with Apple"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signUpButton" />

    <ImageView
        android:id="@+id/appleLogoImageView"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:elevation="4dp"
        android:src="@drawable/applelogo"
        app:layout_constraintTop_toTopOf="@id/appleSignUpButton"
        app:layout_constraintBottom_toBottomOf="@id/appleSignUpButton"
        app:layout_constraintStart_toStartOf="@id/appleSignUpButton"
        android:layout_marginStart="12dp" />

    <!-- Sign Up with Google Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/googleSignUpButton"
        android:layout_width="248dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/google_button_background"
        android:backgroundTint="@null"
        android:paddingStart="48dp"
        android:text="Sign up with Google"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="17sp"
        app:backgroundTint="@null"
        app:layout_constraintTop_toBottomOf="@id/appleSignUpButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Google Logo for Sign Up Button -->
    <ImageView
        android:id="@+id/googleLogoImageView"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:elevation="4dp"
        android:src="@drawable/google"
        app:layout_constraintTop_toTopOf="@id/googleSignUpButton"
        app:layout_constraintBottom_toBottomOf="@id/googleSignUpButton"
        app:layout_constraintStart_toStartOf="@id/googleSignUpButton"
        android:layout_marginStart="12dp" />

    <!-- Navigate to Login Page Text -->

    <TextView
        android:id="@+id/forgotPasswordText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:gravity="center"
        android:text="Or"
        android:textColor="#A1A4B2"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/passwordEditText" />

    <TextView
        android:id="@+id/gotoLoginText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account? Log in"
        android:textColor="#A1A4B2"
        android:textSize="14sp"
        android:clickable="true"
        android:linksClickable="true"
        app:layout_constraintTop_toBottomOf="@id/googleSignUpButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>