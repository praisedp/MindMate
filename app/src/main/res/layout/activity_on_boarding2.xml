<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnBoarding2"
    android:background="@color/white">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_half"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.59"
        android:orientation="horizontal" />

    <ImageView
        android:id="@+id/onboardingImage"
        android:layout_width="414dp"
        android:layout_height="599dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:src="@drawable/onboarding2" />

    <LinearLayout
        android:id="@+id/onboardingCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/card_top_corners"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="@id/guideline_half"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="-30dp">

        <TextView
            android:id="@+id/onboardingTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Track Your Mood and Journal Your Journey"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/onboardingSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
            android:gravity="center"
            android:text="Record your feelings daily and see your progress over time."
            android:textColor="#A1A4B2"
            android:textSize="16sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">
            <Button
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="bottom"
                android:layout_marginTop="78dp"
                android:background="@drawable/continue_button_selector"
                android:backgroundTint="@null"
                android:text="@string/back_button_text"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                app:backgroundTint="@null"
                app:rippleColor="#996E6E"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="0dp" />
            <LinearLayout
                android:id="@+id/progressIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="40dp"
                android:gravity="center_horizontal">

                <View
                    android:layout_width="35dp"
                    android:layout_height="4dp"
                    android:background="@drawable/continue_button_selector"
                    android:backgroundTint="#5F94AE"
                    android:layout_marginEnd="4dp" />
                <View
                    android:layout_width="35dp"
                    android:layout_height="4dp"
                    android:background="@drawable/continue_button_selector"
                    android:backgroundTint="#5F94AE"
                    android:layout_marginEnd="4dp" />
                <View
                    android:layout_width="35dp"
                    android:layout_height="4dp"
                    android:background="@drawable/continue_button_selector"
                    android:backgroundTint="#D9D9D9" />
            </LinearLayout>

            <Button
                android:id="@+id/nextButton"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="bottom|end"
                android:layout_marginTop="78dp"
                android:background="@drawable/continue_button_selector"
                android:backgroundTint="@null"
                android:text="@string/front_button_text"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                app:backgroundTint="@null"
                app:rippleColor="#996E6E"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="0dp" />
        </FrameLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>