<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SleepPage"
    android:background="#03174D">

    <TextView
        android:id="@+id/greetingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Meditate"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/soothingText"
        android:layout_width="308dp"
        android:layout_height="41dp"
        android:layout_marginTop="16dp"
        android:text="Soothing bedtime stories to help you fall into a deep and natural sleep"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/greetingText" />

    <EditText
        android:id="@+id/searchBar"
        android:layout_width="358dp"
        android:layout_height="36dp"
        android:layout_marginTop="172dp"
        android:background="@drawable/search_bar_background"
        android:backgroundTint="#1F2E59"
        android:drawableStart="@android:drawable/ic_menu_search"
        android:drawableEnd="@android:drawable/ic_btn_speak_now"
        android:drawablePadding="8dp"
        android:hint="Search"
        android:paddingStart="16dp"
        android:textColorHint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollableContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/searchBar"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Use a vertical LinearLayout as the container for all scrollable content -->
        <LinearLayout
            android:id="@+id/scrollContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Ocean Moon Container -->
            <FrameLayout
                android:id="@+id/oceanMoonContainer"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginBottom="16dp">
                <ImageView
                    android:id="@+id/oceanMoonImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/oceanmoon"
                    android:scaleType="centerCrop" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/startButtonOceanMoon"
                    android:layout_width="67dp"
                    android:layout_height="33dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/start_button_background1"
                    android:backgroundTint="@null"
                    app:backgroundTint="@null"
                    android:text="START"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp" />
            </FrameLayout>

            <!-- Sleep Grid Container as a simple vertical LinearLayout -->
            <LinearLayout
                android:id="@+id/sleepGridContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- First row: Sleep Card 1 and Sleep Card 2 -->
                <LinearLayout
                    android:id="@+id/sleepRow1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Sleep Card 1 -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/sleepCard1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="#03174D">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp">
                            <ImageView
                                android:id="@+id/sleep1Image"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:scaleType="centerCrop"
                                android:src="@drawable/sleep1" />
                            <TextView
                                android:id="@+id/sleep1Title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Night Island"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:layout_marginTop="8dp" />
                            <TextView
                                android:id="@+id/sleep1Subtitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="45 MIN : SLEEP MUSIC"
                                android:textColor="@color/white"
                                android:textSize="11sp"
                                android:gravity="center"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Sleep Card 2 -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/sleepCard2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="#03174D">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp">
                            <ImageView
                                android:id="@+id/sleep2Image"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:scaleType="centerCrop"
                                android:src="@drawable/sleep2" />
                            <TextView
                                android:id="@+id/sleep2Title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sweet Sleep"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:layout_marginTop="8dp" />
                            <TextView
                                android:id="@+id/sleep2Subtitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5 H : SLEEP MUSIC"
                                android:textColor="@color/white"
                                android:textSize="11sp"
                                android:gravity="center"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!-- Second row: Sleep Card 3 and Sleep Card 4 -->
                <LinearLayout
                    android:id="@+id/sleepRow2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">

                    <!-- Sleep Card 3 -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/sleepCard3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="#03174D">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp">
                            <ImageView
                                android:id="@+id/sleep3Image"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:scaleType="centerCrop"
                                android:src="@drawable/sleep3" />
                            <TextView
                                android:id="@+id/sleep3Title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Deep Sleep"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:layout_marginTop="8dp" />
                            <TextView
                                android:id="@+id/sleep3Subtitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="45 MIN : SLEEP MUSIC"
                                android:textColor="@color/white"
                                android:textSize="11sp"
                                android:gravity="center"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Sleep Card 4 -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/sleepCard4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="#03174D">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp">
                            <ImageView
                                android:id="@+id/sleep4Image"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:scaleType="centerCrop"
                                android:src="@drawable/sleep1" />
                            <TextView
                                android:id="@+id/sleep4Title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Night Music"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:layout_marginTop="8dp" />
                            <TextView
                                android:id="@+id/sleep4Subtitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="45 MIN : SLEEP MUSIC"
                                android:textColor="@color/white"
                                android:textSize="11sp"
                                android:gravity="center"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_nav_background"

        app:menu="@menu/bottom_nav_menu"
        app:itemIconTint="@null"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>